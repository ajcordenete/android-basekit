<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/authNav"
    app:moduleName="authentication"
    app:startDestination="@id/authLandingFragment">

    <fragment
        android:id="@+id/authLandingFragment"
        android:name="com.ajcordenete.authentication.landing.AuthLandingFragment"
        android:label="AuthLandingFragment" >
        <action
            android:id="@+id/action_authLandingFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left"
            app:popEnterAnim="@anim/anim_slide_in_deep_left"
            app:popExitAnim="@anim/anim_slide_out_right"/>
        <action
            android:id="@+id/action_authLandingFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left"
            app:popEnterAnim="@anim/anim_slide_in_deep_left"
            app:popExitAnim="@anim/anim_slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ajcordenete.authentication.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/authLandingFragment"
            app:enterAnim="@anim/anim_slide_in_bottom"
            app:exitAnim="@anim/anim_slide_out_top"
            app:popEnterAnim="@anim/anim_slide_in_deep_top"
            app:popExitAnim="@anim/anim_slide_out_bottom"/>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.ajcordenete.authentication.register.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/authLandingFragment"
            app:enterAnim="@anim/anim_slide_in_bottom"
            app:exitAnim="@anim/anim_slide_out_top"
            app:popEnterAnim="@anim/anim_slide_in_deep_top"
            app:popExitAnim="@anim/anim_slide_out_bottom"/>
    </fragment>
</navigation>