<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Styles.Button.Primary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.BaseKit.Button</item>

        <item name="android:textAppearance">@style/TextAppearance.Headline</item>
        <item name="textAllCaps">?attr/buttonsCapitalized</item>

        <item name="backgroundTint">@color/button_primary_background_tint</item>
        <item name="android:textColor">@color/button_primary_text_color</item>

        <item name="android:paddingVertical">12dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Styles.Button.Secondary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.BaseKit.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.Headline</item>
        <item name="textAllCaps">?attr/buttonsCapitalized</item>

        <item name="backgroundTint">@color/button_secondary_background_tint</item>
        <item name="android:textColor">@color/button_secondary_text_color</item>
        <item name="rippleColor">?attr/rippleColor</item>

        <item name="android:paddingVertical">14dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Styles.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.BaseKit.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.Headline</item>
        <item name="textAllCaps">?attr/buttonsCapitalized</item>

        <item name="backgroundTint">@color/button_outlined_background_color</item>
        <item name="android:textColor">@color/button_outlined_text_color</item>
        <item name="strokeColor">@color/button_outlined_stroke_color</item>
        <item name="rippleColor">?attr/rippleColor</item>

        <item name="android:paddingVertical">14dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Styles.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/button_text_style_text_color</item>

        <item name="android:textAppearance">@style/TextAppearance.Headline</item>
        <item name="textAllCaps">?attr/buttonsCapitalized</item>
        <item name="rippleColor">?attr/rippleColor</item>

        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:paddingHorizontal">0dp</item>
    </style>

    <style name="Styles.Button.TextButton.Toggle">
        <item name="android:textColor">@color/button_text_style_toggleable_text_color</item>
        <item name="rippleColor">@null</item>
    </style>

    <style name="Styles.Button.NavigationButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Body</item>

        <item name="android:minWidth">0dp</item>
        <item name="android:paddingHorizontal">?attr/screenMargin</item>
        <item name="android:gravity">start</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="textAllCaps">false</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_right</item>
        <item name="android:textColor">?attr/colorOnLightRegular</item>
    </style>

    <style name="Styles.Button.Primary.BottomFull">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.BaseKit.Rectangle</item>

        <item name="android:paddingVertical">24dp</item>
    </style>
</resources>