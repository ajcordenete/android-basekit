<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme. -->
    <style name="Theme.BaseKit.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimaryFull</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.BaseKit.Main</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryFull</item>
        <item name="android:navigationBarColor">@color/colorPrimaryFull</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Change this to your App name including the night theme-->
    <style name="Theme.BaseKit.Main" parent="Theme.BaseKit">
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>