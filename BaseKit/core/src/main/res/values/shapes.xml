<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- region Generic Shapes  -->
    <!-- Default shape for small components (button, chip, bottom sheet, fab, etc. You can override this in theme overlays). -->
    <style name="ShapeAppearance.BaseKit.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">?attr/radiusButton</item>
    </style>

    <!-- Default shape for small components (card, dialog, etc. You can override this in theme overlays). -->
    <style name="ShapeAppearance.BaseKit.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">?attr/radiusCard</item>
    </style>

    <!-- Default shape for small components (card, dialog, etc. You can override this in theme overlays). -->
    <style name="ShapeAppearance.BaseKit.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">?attr/radiusBottomSheet</item>
    </style>

    <style name="ShapeAppearance.BaseKit.Round" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.BaseKit.Rectangle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>
    <!-- endregion -->

    <!-- region View Specific Shapes  -->
    <style name="ShapeAppearance.BaseKit.Input" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">?attr/radiusInput</item>
    </style>

    <style name="ShapeAppearance.BaseKit.Button" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">?attr/radiusButton</item>
    </style>

    <style name="ShapeAppearance.BaseKit.Card" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">?attr/radiusCard</item>
    </style>

    <style name="ShapeAppearance.BaseKit.BottomSheet" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">?attr/radiusBottomSheet</item>
    </style>
    <!-- endregion -->
</resources>